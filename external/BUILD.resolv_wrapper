load("@rules_foreign_cc//tools/build_defs:cmake.bzl", "cmake_external")

all_content = filegroup(
    name = "all",
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)

cmake_external(
    name = "resolv_wrapper",
    lib_source = ":all",
    make_commands = [
      "make",
      "make install",
    ],
    shared_libraries = select({
        "@bazel_tools//src/conditions:darwin": ["libresolv_wrapper.0.dylib"],
        "//conditions:default": ["libresolv_wrapper.so.0"],
    }),
    visibility = ["//visibility:public"],
)
